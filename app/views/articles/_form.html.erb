<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Tytuł_Artykułu%><br />
    <%= f.text_field :title, :class => "artykul_tytul"  %>
  </div>
  <div class="kategoria_box">
    <%= f.label :kategoria %><br />
    <%= f.select(:kategoria, options_for_select([['NEWS', 'NEWS'], ['JAVA', 'JAVA'], ['HTML5', 'HTML5'], ['UBUNTU', 'UBUNTU']]), {}, {:class => "kategoria"}) %>
  </div>
  <div class="field">
    <%= f.label :Treść_Artykułu %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit :value => "Aktualizuj Artykuł" %>
  </div>
<% end %>
