<% title @article.title %>
<div class="date-outer">
  <h2 class="date-header"><span><%= @article.created_at.strftime("%A, %B %d, %Y")%></span></h2>
  <div class="date-posts">
    <div class="post-outer">
      <article class="post hentry">
        <a name="2165021750605474041"></a>
        <h2 class="post-title entry-title"><span class="post_title_icon"></span>
          <%= @article.title %>
        </h2>
        <div class="bpostmeta">
          <span><i class="fa fa-clock-o"></i> <%= @article.created_at.strftime("%A, %B %d, %Y")%></span>
          <span><i class="fa fa-user"></i> Dodany przez Miłosz Osiński</span>
          <span><i class="fa fa-bookmark"></i> <%= "##{@article.kategoria}" %></span>
          <span><i class="fa fa-comments"></i> Ilość komentarzy: <%= @article.comments.count %></span>
        </div>
        <div class="post-header-line-1"></div>
        <div class="post-body entry-content clearfix">
          <div class="entry-colors">
            <div class="color_col_1"></div>
            <div class="color_col_2"></div>
            <div class="color_col_3"></div>
          </div>
          <div id="summary2165021750605474041">
            <div>
              <%= sanitize @article.body %>
            </div>
          </div>
          <div class="następny_poprzedni">
            <%= link_to("« Poprzedni Artykuł", @article.previous_article) if @article.previous_article %> | 
            <%= link_to("Następny Artykuł »", @article.next_article) if @article.next_article %>
          </div>
          <div style="clear: both;"></div>
        </div>
      </article>
      <div style="clear: both;"></div>
    </div>
</div>

<div id="comment-block">
  <%= render :partial => 'comment', :collection => @article.comments %> 
</div>
<div class="post hentry" itemtype="http://schema.org/BlogPosting" itemscope="itemscope" id="post_hentry">
<%= form_for([@article, @article.comments.build]) do |f| %>
<div class="user_info">
  <div class="field_single">
    <%= f.label :imię %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field_single">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field_single">
    <%= f.label :Jaki_dziś_dzień_tygodnia? %><br />
    <%= text_field_tag :dzien_tygodnia %>
  </div>
</div>
  <div class="field">
    <br /><br /><br />
    <%= f.text_area :body, :rows => "5", :class => "komentarz_body"%>
  </div><br />
  <p><%= f.submit :value=>"Dodaj Komentarz", "rel"=>"nofollow" %></p>
<% end %>
</div>
